<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHistoryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025.11.28 12:34"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHistoryProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_provider_example" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnViewPdf"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_photo"
        android:contentDescription="Ver" />

    <Space android:layout_width="8dp" android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/btnSendPdf"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_upload"
        android:contentDescription="Enviar" />

    <Space android:layout_width="8dp" android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/btnDeleteHistory"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="Eliminar" />

</LinearLayout>

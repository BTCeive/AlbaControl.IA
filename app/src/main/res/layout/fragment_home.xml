<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/cardNuevoAlbaran"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/home_cta_background"
            android:elevation="8dp"
            android:clipToPadding="false"
            android:padding="16dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.80"
            app:layout_constraintDimensionRatio="10:9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnBorradores"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/ctaPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="@color/btn_text"
                    android:textSize="88sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false" />

                <TextView
                    android:id="@+id/ctaTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_new_albaran"
                    android:textColor="@color/btn_text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </FrameLayout>

        <Button
            android:id="@+id/btnBorradores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/home_borradores"
            android:elevation="4dp"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardNuevoAlbaran"
            app:layout_constraintBottom_toTopOf="@+id/btnHistorial"
            
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/home_historial"
            android:elevation="4dp"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBorradores"
            app:layout_constraintBottom_toTopOf="@+id/btnProveedores"
            
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnProveedores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/home_proveedores"
            android:elevation="4dp"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnHistorial"
            app:layout_constraintBottom_toTopOf="@+id/btnOpciones"
            
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnOpciones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/home_opciones"
            android:elevation="4dp"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnProveedores"
            app:layout_constraintBottom_toBottomOf="parent"
            
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

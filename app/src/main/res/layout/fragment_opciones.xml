<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:fadeScrollbars="false"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/options_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <!-- Recepcionistas (boxed) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/recep_box_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:elevation="4dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tvRecepcionistasTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/recepcionistas_title" />

                <Button
                    android:id="@+id/btnAddRecepcionistaOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:minWidth="48dp"
                    android:contentDescription="Añadir recepcionista"
                    android:elevation="4dp"
                    android:clipToPadding="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerRecepcionistas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp" />

        </LinearLayout>

        <!-- Ubicaciones (boxed) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/recep_box_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:elevation="4dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tvUbicacionTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/pickup_location_title" />

                <Button
                    android:id="@+id/btnAddUbicacionOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:minWidth="48dp"
                    android:contentDescription="Añadir ubicación"
                    android:elevation="4dp"
                    android:clipToPadding="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerUbicaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp" />

        </LinearLayout>

        <!-- Emails (boxed) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/recep_box_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:elevation="4dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tvEmailsTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_destination_emails_title" />

                <Button
                    android:id="@+id/btnAddEmailOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:minWidth="48dp"
                    android:contentDescription="Añadir email"
                    android:elevation="4dp"
                    android:clipToPadding="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerEmails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp" />

        </LinearLayout>

        <!-- Idiomas (boxed) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/recep_box_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:elevation="4dp"
            android:clipToPadding="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/languages_title"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerLanguages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:paddingBottom="12dp" />

        </LinearLayout>

        <!-- Configuración de la app (expandable) -->
        <LinearLayout
            android:id="@+id/llConfigHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tvConfigTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/app_configuration_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvConfigArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▾"
                android:textSize="18sp"
                android:padding="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/configContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOcrTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ocr_system_title" />

            <SeekBar
                android:id="@+id/seekOcrPasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="9" />

            <TextView
                android:id="@+id/tvOcrNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ocr_system_warning"
                android:textSize="12sp"
                android:textStyle="italic"
                android:paddingTop="4dp"
                android:paddingBottom="12dp" />

        </LinearLayout>

        <!-- Backups (expandable) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_title"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="6dp" />

        <!-- For each area, row with export/import -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/home_borradores" />

            <ImageButton
                android:id="@+id/btnExportDrafts"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_export"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Exportar"
                android:elevation="4dp"
                android:clipToPadding="false" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnImportDrafts"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_import"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Importar"
                android:elevation="4dp"
                android:clipToPadding="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/home_historial" />

            <ImageButton
                android:id="@+id/btnExportHistory"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_export"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Exportar"
                android:elevation="4dp"
                android:clipToPadding="false" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnImportHistory"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_import"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Importar"
                android:elevation="4dp"
                android:clipToPadding="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/home_proveedores" />

            <ImageButton
                android:id="@+id/btnExportProviders"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_export"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Exportar"
                android:elevation="4dp"
                android:clipToPadding="false" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnImportProviders"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_import"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Importar"
                android:elevation="4dp"
                android:clipToPadding="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/patterns_title" />

            <ImageButton
                android:id="@+id/btnExportPatterns"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_export"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Exportar"
                android:elevation="4dp"
                android:clipToPadding="false" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnImportPatterns"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_import"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Importar"
                android:elevation="4dp"
                android:clipToPadding="false" />

        </LinearLayout>

        <!-- Backup general -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/backup_general" />

            <Button
                android:id="@+id/btnExportBackupAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/export"
                android:elevation="4dp"
                android:clipToPadding="false" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnImportBackupAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_import"
                android:elevation="4dp"
                android:clipToPadding="false" />

        </LinearLayout>

        <!-- Restaurar app -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/restore_app" />

            <Button
                android:id="@+id/btnRestoreApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restore"
                android:elevation="4dp"
                android:clipToPadding="false" />

        </LinearLayout>

        <!-- Borrado automático del Historial -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auto_delete_section"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="6dp" />

        <!-- Por antigüedad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Borrado por antigüedad (días)" />

            <EditText
                android:id="@+id/etAutoDeleteDays"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="4"
                android:text="365" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/switchAutoDeleteAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        </LinearLayout>

        <!-- Por cantidad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Borrado por cantidad (máx. PDFs)" />

            <EditText
                android:id="@+id/etAutoDeleteMax"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="4"
                android:text="500" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/switchAutoDeleteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cámara + Subir archivo (misma línea) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cámara" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Subir archivo" />

        </LinearLayout>

        <!-- Ubicación de recogida + añadir -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <Spinner
                android:id="@+id/spinnerUbicacion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnAddUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:contentDescription="Añadir ubicación" />

        </LinearLayout>

        <!-- Recepcionista + añadir -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <Spinner
                android:id="@+id/spinnerRecepcionista"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnAddRecepcionista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:contentDescription="Añadir recepcionista" />

        </LinearLayout>

        <!-- Fecha y hora creación -->
        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Proveedor, NIF, Nº albarán, Fecha albarán -->
        <EditText
            android:id="@+id/etProveedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Proveedor *" />

        <EditText
            android:id="@+id/etNif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NIF/CIF" />

        <EditText
            android:id="@+id/etNumeroAlbaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nº albarán" />

        <EditText
            android:id="@+id/etFechaAlbaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha albarán" />

        <!-- Productos: contenedor de boxes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productos"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/product_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Se añadirán product_item dinámicamente -->

        </LinearLayout>

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ añadir producto"
            android:layout_marginBottom="12dp" />

        <!-- Incidencias y flags -->
        <CheckBox
            android:id="@+id/checkIncidenciaAlbaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incidencia en el albarán" />

        <CheckBox
            android:id="@+id/checkSinAlbaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin albarán de entrega"
            android:checked="true"
            android:layout_marginBottom="12dp" />

        <!-- Añadir fotografía -->
        <!-- Contenedor de miniaturas de fotos -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:visibility="visible"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/photo_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" />

        </HorizontalScrollView>

        <Button
            android:id="@+id/btnAddPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ añadir fotografía"
            android:layout_marginBottom="12dp" />

        <!-- Botones finales: Finalizar, Guardar Borrador y Cancelar -->
        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finalizar"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardarBorrador"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Guardar Borrador" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSavePattern"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Guardar patrón" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cancelar" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

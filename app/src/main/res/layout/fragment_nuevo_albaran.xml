<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="none"
    android:fadeScrollbars="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cámara + Subir archivo (misma línea) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/camera_button" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/upload_file_button" />

        </LinearLayout>

        <!-- Caja: Ubicación de recogida, Recepcionista y Fecha de creación (mismo estilo que en Opciones) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/recep_box_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:elevation="4dp"
            android:clipToPadding="false">

            <!-- Fecha y hora creación -->
            <TextView
                android:id="@+id/tvCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Ubicación de recogida + añadir -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Spinner
                    android:id="@+id/spinnerUbicacion"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/btnAddUbicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Añadir ubicación" />

            </LinearLayout>

            <!-- Recepcionista + añadir -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <Spinner
                    android:id="@+id/spinnerRecepcionista"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/btnAddRecepcionista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Añadir recepcionista" />

            </LinearLayout>

        </LinearLayout>

        <!-- Caja: Proveedor, NIF, Nº albarán, Fecha albarán (mismo estilo que en Opciones) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/recep_box_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:elevation="4dp"
            android:clipToPadding="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/supplier_label"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etProveedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Proveedor *"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tax_id_label"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etNif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIF/CIF"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/albaran_number_label"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etNumeroAlbaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/albaran_number_hint"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/albaran_date_label"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etFechaAlbaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/albaran_date_hint" />

        </LinearLayout>

        <!-- Productos: contenedor de boxes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/products_label"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/product_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Se añadirán product_item dinámicamente -->

        </LinearLayout>

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_product_button"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:clipToPadding="false" />

        <!-- Incidencias y flags -->
        <CheckBox
            android:id="@+id/checkIncidenciaAlbaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery_incident_label" />

        <CheckBox
            android:id="@+id/checkSinAlbaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_delivery_note_label"
            android:checked="true"
            android:layout_marginBottom="12dp" />

        <!-- Añadir fotografía -->
        <!-- Contenedor de miniaturas de fotos -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:visibility="visible"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/photo_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" />

        </HorizontalScrollView>

        <Button
            android:id="@+id/btnAddPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_photo_button"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:clipToPadding="false" />

        <!-- Comentarios (para desperfectos, roturas, notas) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comments_label"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etComentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/comments_hint"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="12dp" />

        <!-- Botones finales: Finalizar, Guardar Borrador y Cancelar -->
        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finalize_button"
            android:textSize="20sp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:clipToPadding="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardarBorrador"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/save_draft_button"
                android:elevation="4dp"
                android:clipToPadding="false" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <!-- Guardar patrón eliminado: ahora se guarda automáticamente al finalizar -->

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:elevation="4dp"
                android:clipToPadding="false" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos base para personalización separada -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Personalizar colores y tipografías aquí -->
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="buttonStyle">@style/PrimaryButton</item>
        <item name="android:imageButtonStyle">@style/IconButton</item>
    </style>

    <style name="H1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_gradient_ripple</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IconButton">
        <item name="android:background">@drawable/icon_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>
